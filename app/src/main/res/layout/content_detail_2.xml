<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:layout_gravity="fill_vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:background="@android:color/transparent"
            android:layout_height="240dp"/>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            card_view:cardElevation="10dp"
            card_view:cardCornerRadius="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:text="Images"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"/>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/book_photos_view_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:scrollIndicators="none"
                    android:overScrollMode="always"
                    android:nestedScrollingEnabled="false">
                </android.support.v7.widget.RecyclerView>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            card_view:cardElevation="10dp"
            card_view:cardCornerRadius="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:text="Synopsis"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="16dp"
                    android:textSize="13sp"
                    android:text="@string/synopsis"
                    android:textColor="@android:color/white"
                    android:alpha="0.7"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            card_view:cardElevation="10dp"
            card_view:cardCornerRadius="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:text="Book Details"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"/>
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp">
                    <TableRow android:layout_marginBottom="8dp">
                        <TextView
                            android:text="Title : "
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:minWidth="64dp"/>
                        <TextView
                            android:text="Harry Potter and The Deathly Hallow"
                            android:textColor="@android:color/white"
                            android:alpha="0.7"
                            android:layout_weight="1"/>
                    </TableRow>
                    <TableRow android:layout_marginBottom="8dp">
                        <TextView
                            android:text="Author : "
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:minWidth="64dp"/>
                        <TextView
                            android:text="J.K. Rowling"
                            android:textColor="@android:color/white"
                            android:alpha="0.7"
                            android:layout_weight="1"/>
                    </TableRow>
                    <TableRow android:layout_marginBottom="8dp">
                        <TextView
                            android:text="Publisher : "
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:minWidth="64dp"/>
                        <TextView
                            android:text="Bloomsbury"
                            android:textColor="@android:color/white"
                            android:alpha="0.7"
                            android:layout_weight="1"/>
                    </TableRow>
                    <TableRow android:layout_marginBottom="8dp">
                        <TextView
                            android:text="Year : "
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:minWidth="64dp"/>
                        <TextView
                            android:text="2014"
                            android:textColor="@android:color/white"
                            android:alpha="0.7"
                            android:layout_weight="1"/>
                    </TableRow>
                    <TableRow android:layout_marginBottom="8dp">
                    <TextView
                        android:text="Cover : "
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:minWidth="64dp"/>
                    <TextView
                        android:text="Paper Back"
                        android:textColor="@android:color/white"
                        android:alpha="0.7"
                        android:layout_weight="1"/>
                    </TableRow>
                    <TableRow android:layout_marginBottom="8dp">
                        <TextView
                            android:text="ISBN 10 : "
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:minWidth="64dp"/>
                        <TextView
                            android:text="1234567899"
                            android:textColor="@android:color/white"
                            android:alpha="0.7"
                            android:layout_weight="1"/>
                    </TableRow>
                    <TableRow android:layout_marginBottom="8dp">
                        <TextView
                            android:text="ISBN 13 : "
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:minWidth="64dp"/>
                        <TextView
                            android:text="1234567891012"
                            android:textColor="@android:color/white"
                            android:alpha="0.7"
                            android:layout_weight="1"/>
                    </TableRow>
                </TableLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>